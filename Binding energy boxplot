# Import necessary libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Path to the CSV file (adjust the path according to your file location)
file_path = ("")

# Load the data
df = pd.read_csv(file_path)

# Configure the plot style
sns.set_theme(style="whitegrid")  # Clean and professional style
plt.figure(figsize=(8, 6), dpi=600)  # Increase resolution for publication quality

# Create the boxplot with Seaborn
ax = sns.boxplot(data=df, palette="Set3")

# Rotate X-axis labels for better readability
ax.set_xticklabels(ax.get_xticklabels(), rotation=90, ha="center", fontsize=18, fontweight="bold")

# Adjust labels and title
plt.ylabel("Average binding energy (kcal/mol)", fontsize=17, fontweight="bold")

# Adjust margins
plt.tight_layout()

# Save the plot in high quality for publications
plt.savefig("datosRMSD-PTP1Bhannyamitzi.png", dpi=600, bbox_inches="tight")

# Show the plot
plt.show()
